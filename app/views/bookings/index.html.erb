<div class="container">
<h1>Your bookings:</h1>
  <% @bookings.each do |booking| %>
    <div class="rating-card">
      <% start_date = Date.parse(booking.start_date.to_s) %>
      <% end_date = Date.parse(booking.end_date.to_s) %>
      <% booking_duration = end_date - start_date %>
      <h3>Your booking <em>(ref: #<%= booking.id %>)</em></h3>
      <h2><strong><%= Bbq.find(booking.bbq_id).title %></strong></h2>
      <h4>from</h4>
      <h3><%= start_date.strftime('%d %m %Y').split.join('/') %></h3>
      <h4>to</h4>
      <h3><%= end_date.strftime('%d %m %Y').split.join('/') %></h3>
      <p>Price: <strong>Â£<%= booking_duration * booking.bbq.price %></strong></p>
    </div>
  <% end %>
